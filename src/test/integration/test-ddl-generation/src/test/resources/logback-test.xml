  <!--<logger name="org.avaje.classpath" level="INFO"/>-->

  <!--<logger name="io.ebeaninternal.server.autotune" level="TRACE"/>-->

  <!--<logger name="com.avaje.ebean.dbmigration.DdlRunner" level="DEBUG"/>-->

</configuration>
